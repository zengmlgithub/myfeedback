<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_width="324dp"
        android:layout_height="162dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
          >

        <TextView
                android:id="@+id/title_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="今天下午的活动很好"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="19dp"
                android:lines="1"
                style="@style/title_size_style"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_tv"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="4dp"
                android:lines="5"
                style="@style/content_size_style"
                android:lineSpacingExtra="2dp"
        />

        <ImageView
                android:id="@+id/feedback_iv"
                android:layout_width="37dp"
                android:layout_height="19dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@mipmap/feedback_bg" />

        <ImageView
                android:id="@+id/msg_line_iv"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginRight="4dp"
                android:layout_below="@id/content_tv"
                android:layout_marginTop="15dp"
                android:background="@color/black" />

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_below="@+id/msg_line_iv"

        >
            <TextView
                    android:id="@+id/msg_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:text="@string/msg_person_txt"
                    style="@style/notice_title_size_style"
            />

            <TextView
                    android:id="@+id/person_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_toRightOf="@id/msg_tv"
                    style="@style/content_size_style"
                    android:layout_centerVertical="true"
                    android:text="湖南三一工业职业技术学院"
                    android:layout_toLeftOf="@+id/msg_date_tv"
                    android:layout_marginRight="5dp"
                    />

            <TextView
                    android:id="@+id/msg_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/date_tv"
                    android:text="通知时间:"
                    style="@style/notice_title_size_style"
            />

            <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="4dp"
                    style="@style/content_size_style"
                    android:text="2019-05-20 14:30"
            />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
